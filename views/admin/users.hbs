<div class="bg-header users-header">
  <h1 class="text-center py-5">Users Management</h1>
</div>

<div class="container-fluid">
  <div class="form-inline py-5">
    <form class="m-auto" method="GET" action="/admin/users/list">
      <input type="search" class="form-control" name="userName" placeholder="Search for a user..." />
      <button class="btn corporate-btn">Search!</button>
    </form>
  </div>

  {{#each users}}
  <div class="card my-3 mx-auto col-6">
    <div class="row no-gutters">
      <div class="col-md-4">
        <br><img src="{{this.image}}" width="200" height="200" class="card-img" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <p class="card-text"><small class="text-muted">{{this.email}}</small></p>
        </div>
      </div>

    </div>
    <form method="POST" class="py-2 ml-auto" action="users/delete/{{this._id}}">
      <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
  Delete
</button>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        Are you sure you want to delete your profile?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
        <button class="btn btn-success">Yes</button>
      </div>
    </div>
  </div>
</div>
    </form>
  </div>
  {{/each}}
</div>