<h1> Editting Shop: {{shop.name}}</h1>
<div class="form">
  <form method="POST" action="/shops/edit" enctype="multipart/form-data">
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" placeholder="{{shop.name}}">
      </div>
      <div class="form-group col-md-2">
        <label for="inputState">Type</label>
          <select name="type" class="form-control" placeholder="{{shop.type}}">
            <option value="Health/Nature Shop">Health/Nature Shop</option>
            <option value="Sports Nutrition">Sports Nutrition</option>
            <option value="Meal prepared delivery">Meal prepared delivery</option>
          </select> 
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-2">
        <label for="inputState">City</label>
        <select name="city" class="form-control" placeholder="{{shop.location.city}}">
          <option value="Porto">Porto</option>
          <option value="Lisbon">Lisbon</option>
          <option value="Algarve">Algarve</option>
        </select>
      </div>
      <div class="form-group col-md-4">
        <label for="address">Address</label>
        <input type="text" class="form-control" name="address" placeholder="{{shop.location.address}}">
      </div>
    </div>
    Contact:
    <div class="form-row">
      <div class="form-group col-md-2">
        <input type="email" class="form-control" name="email" placeholder="{{shop.contact.email}}">
      </div>
      <div class="form-group col-md-2">
        <input type="text" class="form-control" name="phone" placeholder="{{shop.contact.phone}}">
      </div>
      <div class="form-group col-md-2">
        <input type="text" class="form-control" name="website" placeholder="{{shop.contact.website}}" >
      </div>
    </div>
    <div>
      <label for="sign-up-image">Profile Image</label>
      <input type="file" name="image" placeholder="Add your profile image">
      <button class="btn btn-primary">Save Store</button>
    </div>
  </form>
</div>