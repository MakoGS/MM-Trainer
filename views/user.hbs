<div class="bg-header profile-header">
  <h1 class="text-center py-5">Your profile</h1>
</div>
<div class="container-fluid pt-5">
  <div class="card border-success mb-3">
    <div class="card-header">
      <h5 class="card-title text-success">{{user.name}}</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-3">
          <img src="{{user.image}}" width="200" height="200" />
        </div>
        <div class="col-9">
          <div class="row">
            <div class="col m-2">
              <p class="card-text"><u>Email:</u> {{user.email}}</p>
            </div>
            <div class="col m-2">
              <p class="card-text"><u>Genre:</u> {{user.genre}}</p>
            </div>
            <div class="col m-2">
              <p class="card-text"><u>Interests:</u> {{user.skills}}</p>
            </div>
            <div class="col m-2">
              <p><u>Location:</u> {{user.location}}</p>
            </div>
          </div>
          <p class="card-text"><u>Description:</u></p>
          <p>{{user.description}}</p>
          <div class="row">
            <div class="col-2 ml-auto">
              <form method="GET" action="/user/edit/">
                <button class="btn btn-light">Edit profile</button>
              </form>
            </div>
            <div class="col-2">
              <form method="POST" action="user/delete/">
                <button class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>