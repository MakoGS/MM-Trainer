<div class="bg-header profile-header">
  <h1 class="text-center">Your profile</h1>
</div>
<div class="container-fluid pt-5">
  <div class="card border-success mb-3">
    <div class="card-header">
      <h5 class="card-title text-success">{{user.name}}</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <br><br><img src="{{user.image}}" width="200" height="200" />
        </div>
        <div class="col-8">
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li class="list-group-item card text"><b>Email: </b>{{user.email}}</li>
              <li class="list-group-item card text"> <b>Genre: </b>{{user.genre}}</li>
              <li class="list-group-item card text"> <b>Description: </b>{{user.description}}</li>
              <ul class="list-group-item card text"><b>Interests:</b>
                {{#each user.skills}}
                <li>{{this}}</li>
                {{/each}}</ul>
            </ul>
          </div>
          <div class="row">
            <div class="col-2 ml-auto">
              <form method="GET" action="/user/edit/">
                <button class="btn btn-light">Edit profile</button>
              </form>
            </div>
            <div class="col-2">
              <form method="POST" action="user/delete/">
                <button class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>