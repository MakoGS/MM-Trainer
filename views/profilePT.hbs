<h1>{{PT.name}}'s Profile</h1>
<div class="card my-3 mx-auto col-6">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{PT.image}}" class="card-img" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{PT.name}}</h5>
        <p class="card-text">{{PT.location}}</p>
        <p class="card-text">{{PT.description}}</p>
        <p class="card-text">My Skills:
          {{#each PT.skills}}
            <p>{{this}}</p>
          {{/each}}</p>
        <p class="card-text"><small class="text-muted">{{PT.email}}</small></p>
      </div>
    </div>